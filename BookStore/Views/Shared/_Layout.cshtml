                        <td>Price</td>
                        <td><a href="#" class="anchor btn-blue">Edit</a><a class="anchor btn-red ML-1" href="#">Remove</a></td>
                    </tr>
                    <tr>
                        <td>BookId</td>
                        <td>BookName</td>
                        <td>BookAuthor</td>
                        <td>Price</td>
                        <td>Category</td>
                        <td>BookAuthor</td>
                        <td>Price</td>
                        <td><a href="#" class="anchor btn-blue">Edit</a><a class="anchor btn-red ML-1" href="#">Remove</a></td>
                    </tr>
                    <tr>
                        <td>BookId</td>
                        <td>BookName</td>
                        <td>BookAuthor</td>
                        <td>Price</td>
                        <td>Category</td>
                        <td>BookAuthor</td>
                        <td>Price</td>
                        <td><a href="#" class="anchor btn-blue">Edit</a><a class="anchor btn-red ML-1" href="#">Remove</a></td>
                    </tr>
                </tbody>
            </table>
        </section>
    </main>
    <div>
        @RenderBody()
    </div>
</body>
</html>
