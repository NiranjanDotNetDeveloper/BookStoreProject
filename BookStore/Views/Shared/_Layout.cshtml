<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/style.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <title>@ViewBag.Title</title>
</head>
<body>
    <main class="container">
        <section class="mang-reg">
            <div class="header-text">
                <h1>Contacts Manager</h1>
            </div>
            <div class="links">
@*                 <a asp-action="Register" asp-controller="Account">Register</a>
                <a asp-action="Login" asp-controller="Account" class="ML-1">Login</a> *@
                @Html.ActionLink("Register","Register","Account")

                @Html.ActionLink("Login", "Login", "Account")
            </div>
        </section>
        <section class="caret">
            <div>
                Contacts <i class="fa-solid fa-caret-right"></i> Person
            </div>
            <div>
                <a href="#" class="anchor2">Add Person</a>
                <a href="#" class="anchor2">Download as CSV</a>
                <a href="#" class="anchor2">Download as Excel</a>
                <a href="#" class="anchor2">Download as Pdf</a>
            </div>
        </section>
        <section class="searchbar">
            <div class="person-heading">
                PERSONS
            </div>
            <div class="search">
                Search By
                <select>
                    <option>PersonName</option>
                </select>
                <input type="search" placeholder="search" />
                <button type="submit">Search</button>
            </div>
        </section>
        <section class="table-section">
            <table class="table">
                <thead>
                    <tr>
                        <th>Person Name</th>
                        <th>Email</th>
                        <th>Date Of Birth</th>
                        <th>Age</th>
                        <th>Gender</th>
                        <th>Country</th>
                        <th>Address</th>
                        <th>Operation</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
